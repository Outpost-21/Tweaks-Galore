<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<TweaksGalore.TweakSectionDef>
		<defName>TweakSection_Vanilla_Raids</defName>
		<label>Raids</label>
		<description>This will only function against vanilla versions of the raid types, some modded raids use their own version and will bypass these tweaks.</description>
		<tweaks>
			<li>Tweak_RaidStratBreach</li>
			<li>Tweak_RaidStratDropPod</li>
			<li>Tweak_RaidStratSapper</li>
			<li>Tweak_RaidStratSiege</li>
			<li>Tweak_RaidStratCowardly</li>
		</tweaks>
	</TweaksGalore.TweakSectionDef>

	<TweaksGalore.TweakDef>
		<defName>Tweak_RaidStratBreach</defName>
		<label>No Breach Raids</label>
		<description>Prevents this type of raid.</description>
		<tweakType>Bool</tweakType>
		<defaultValue>false</defaultValue>
	</TweaksGalore.TweakDef>

