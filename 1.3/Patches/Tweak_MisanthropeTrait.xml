<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="TweaksGalore.PatchOperation_SettingActive">
		<settings>
			<li>tweak_misanthropeTrait</li>
		</settings>
		<label>Misanthrope Trait</label>
		<active Class="PatchOperationAdd">
			<xpath>/Defs</xpath>
			<value>
				<TraitDef>
					<defName>DislikesHumanity</defName>
					<commonality>0.1</commonality>
					<degreeDatas>
						<li>
							<label>misanthrope</label>
							<description>{PAWN_nameDef} really dislikes and distrusts humans in general. I mean, who can blame them right?</description>
						</li>
					</degreeDatas>
				</TraitDef>
			</value>
		</active>
	</Operation>

</Patch>